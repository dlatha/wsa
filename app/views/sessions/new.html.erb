<p>New user? <%= link_to "Sign up now!", signup_path %></p>
<fieldset>
<legend ><h1>Sign in</h1></legend>
<%= form_for(:session, :url => sessions_path) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>

  <div class="actions">
    <%= f.submit "Sign in" %>
  </div>
<% end %>

<p>Forgot Password? <%= link_to "Retrieve it here!", '#'%></p>
</fieldset>